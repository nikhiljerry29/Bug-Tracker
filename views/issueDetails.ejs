<%- include("partials/navbar") -%>

<section id="Dashboard">
    <div class="container details-section">
        <div class="table-responsive-md">
            <%- include ("./partials/messages") -%>
            <table class="table table-light table-hover table-striped">
                <thead class="thead-success">
                    <tr>
                        <th scope="col">Issue ID</th>
                        <th>BG<%= issueDetails.id %> </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Status</th>
                        <td><%= issueDetails.status %></td>
                    </tr>
                    <tr>
                        <th>Project ID</th>
                        <td>
                            <a href="/dashboard/projects/PR<%= issueDetails.project_id %>" class="id-link">
                                PR<%= issueDetails.project_id %>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Ticket Name</th>
                        <td><%= issueDetails.issue_name %></td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>
                            <p><%= issueDetails.issue_description %></p>
                        </td>
                    </tr>
                    <tr>
                        <th>Priority</th>
                        <td><%= issueDetails.priority %></td>
                    </tr>
                    <tr>
                        <th>Created On</th>
                        <td><%= date(issueDetails.createdAt) %></td>
                    </tr>
                    <tr>
                        <th>Last Updated On</th>
                        <td><%= date(issueDetails.updatedAt) %></td>
                    </tr>
                    <% if (issueDetails.status === 'Closed') { %>
                    <tr>
                        <th>Closed On</th>
                        <td><%= date(issueDetails.closedOn) %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-md-12">
                <% if (isStatusUpdated) { %>
                <form action="/dashboard/BG/<%= issueDetails.id %>" method="POST">
                    <label for="inputStatus">Change Status</label>
                    <select type="submit" id="inputStatus" class="form-control" name="status">
                        <option selected>Opened</option>
                        <option>In Progress</option>
                        <option>Closed</option>
                    </select>
                    <br>
                    <button class="btn btn-light active" type="submit">Save</button>
                </form>
                <% } else {%>
                <a href="/dashboard" class="issue-button">Back to All Issues</a>
                <a href="/dashboard/BG/update<%= issueDetails.id %>" class="issue-button">Change Status</a>
                <% } %>

            </div>
        </div>
    </div>
</section>